{
    "name": "liberty-protocol-spec",
    "version": "0.0.1",
    "private": true,
    "files": [
        "src/",
        "pages/",
        "doczrc.js",
        "tsconfig.json",
        "package.json"
    ],
    "scripts": {
        "dev": "docz dev",
        "build": "docz build",
        "serve": "docz serve",
        "spellcheck": "mdspell './pages/**/*.md' './*.md' '!./LICENSE.md'  --en-US --ignore-numbers --report",
        "spellfix": "mdspell './pages/**/*.md' './*.md' '!./LICENSE.md'  --en-US --ignore-numbers",
        "lint-md": "remark ./pages/**/*.md",
        "lint": "npm run lint-md && npm run spellcheck"
    },
    "dependencies": {
        "@emotion/react": "^11.1.1",
        "@emotion/styled": "^11.0.0",
        "docz": "^2.3.1",
        "markdown-spellcheck": "^1.3.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@types/react": "^17.0.1",
        "@types/react-dom": "^17.0.1",
        "compose-function": "3.0.3",
        "remark": "^13.0.0",
        "remark-cli": "^9.0.0",
        "remark-lint": "^8.0.0",
        "remark-preset-lint-recommended": "^5.0.0"
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-recommended",
            [
                "remark-lint-list-item-indent",
                false
            ]
        ]
    }
}
